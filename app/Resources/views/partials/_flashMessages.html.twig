<div class="container-fluid px-0 flashMessages">
    <div>
        <div class="row">
            <div class="col-lg-2 offset-lg-5 px-0">
                {% block flashMessages %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }} alert-dismissible bg-{{ type }} mb-0 pb-0 px-0 border-0 text-white flashMessages_header" role="alert">
                                <i class="fas fa-check fa-3x pt-5 pb-4 pl-4"></i>
                                <button type="button" class="close text-dark flashMessages_close" data-dismiss="alert">
                                    <span aria-hidden="true">&times;</span>
                                    <span class="sr-only">Fermer</span>
                                </button>
                                <div class="bg-white pb-3 px-3 flashMessages_content">
                                    {{ message | raw }}
                                </div>
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endblock %}
            </div>
        </div>
    </div>
</div>